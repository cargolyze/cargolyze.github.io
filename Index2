  <script>
    // Simple chart implementation with canvas
        document.addEventListener('DOMContentLoaded', function() {
            // Shipping Analytics Chart
            const shippingCtx = document.getElementById('shippingChart').getContext('2d');
            
            // Create gradient
            const gradient = shippingCtx.createLinearGradient(0, 0, 0, 250);
            gradient.addColorStop(0, 'rgba(49, 130, 206, 0.7)');
            gradient.addColorStop(1, 'rgba(49, 130, 206, 0.1)');
            
            // Draw shipping chart
            shippingCtx.beginPath();
            shippingCtx.moveTo(0, 200);
            shippingCtx.lineTo(50, 150);
            shippingCtx.lineTo(100, 180);
            shippingCtx.lineTo(150, 120);
            shippingCtx.lineTo(200, 160);
            shippingCtx.lineTo(250, 100);
            shippingCtx.lineTo(300, 140);
            shippingCtx.lineTo(350, 80);
            shippingCtx.lineTo(400, 130);
            shippingCtx.lineTo(450, 70);
            shippingCtx.lineTo(500, 110);
            shippingCtx.strokeStyle = '#3182ce';
            shippingCtx.lineWidth = 3;
            shippingCtx.stroke();
            
            // Fill under the line
            shippingCtx.lineTo(500, 250);
            shippingCtx.lineTo(0, 250);
            shippingCtx.closePath();
            shippingCtx.fillStyle = gradient;
            shippingCtx.fill();
            
            // Carrier Performance Chart
            const carrierCtx = document.getElementById('carrierChart').getContext('2d');
            
            // Draw bars for carrier performance
            const carriers = ['UPS', 'FedEx', 'DHL', 'USPS'];
            const performance = [85, 92, 78, 65];
            const colors = ['#3182ce', '#48bb78', '#ed8936', '#e53e3e'];
            
            const barWidth = 80;
            const spacing = 30;
            const startX = 50;
            
            for (let i = 0; i < carriers.length; i++) {
                const height = (performance[i] / 100) * 180;
                const x = startX + i * (barWidth + spacing);
                const y = 230 - height;
                
                carrierCtx.fillStyle = colors[i];
                carrierCtx.fillRect(x, y, barWidth, height);
                
                // Add carrier label
                carrierCtx.fillStyle = '#2d3748';
                carrierCtx.font = '12px Arial';
                carrierCtx.textAlign = 'center';
                carrierCtx.fillText(carriers[i], x + barWidth/2, 250);
                
                // Add performance percentage
                carrierCtx.fillStyle = '#2d3748';
                carrierCtx.fillText(performance[i] + '%', x + barWidth/2, y - 10);
            }
            
            // Mobile menu toggle
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const sidebar = document.querySelector('.sidebar');
            
            mobileMenuBtn.addEventListener('click', function() {
                sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
            });
            
            // Add some interactivity to buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
            
            // Simulate real-time updates
            setInterval(function() {
                const activeShipments = document.querySelector('.stat-card:nth-child(1) .stat-value');
                const currentValue = parseInt(activeShipments.textContent);
                activeShipments.textContent = currentValue + Math.floor(Math.random() * 3) - 1;
            }, 5000);
        });
  </script>
